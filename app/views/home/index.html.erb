<!DOCTYPE html>
<html>
    <head>
        <title> ChampionList </title>
    </head>
    <body>
        <%= render 'shared/header' %>
        <%= content_tag :div, class: "body" do %>
                <%= content_tag :div, class: "notices" do%>
                    <h2>Notic√≠as recentes</h2>
                <%end%>
                <%= content_tag :div, class: "body-2" do %>
                        <%= content_tag :div, class: "body-3" do%>
                            <h1> Quer montar seu campeonato? </h1>
                            <hr>
                        <%end%>
                    <h2>Clique aqui</h2>
                    <%= button_to "Criar campeonatos", "/champions/new", method: :get, class: "button2", id: "createChampionshipButton" %>
                <%end%>
                <div class="Usuario">
                <h2>Entre no seu perfil!!!</h2>
                <%= button_to "Perfil de usuario", "/perfil", method: :get, class: "button2"%>
                </div>
        <% end %>
        <% if flash[:alert] %>
        <div class="alert"><%= flash[:alert] %></div>
        <% end %>
        <%= content_tag :div, class: "Visualizar_campeonatos" do%>
        <h1> Campeonatos recentes </h1>
        <%end%>
        <div class="button3">
        <%= button_to "Campeonatos criados", "/champions", method: :get, class: "button2"%>
        </div>
        <%= render "shared/footer"%>
    </body>
</html>